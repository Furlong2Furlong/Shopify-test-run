  background-color:rgb(234, 158, 210);        /* Calendar background */
  border: 2px solidrgb(227, 151, 214);     /* Border color */
  border-radius: 10px;
  box-shadow: 0 4px 12px rgba(0, 119, 255, 0.3);
}

/* Header background */
.flatpickr-months {
  background-color:rgb(97, 206, 182);
  color: white;
  font-weight: bold;
}

/* Day numbers */
.flatpickr-day {
  color: #333;
}

/* Hovered day */
.flatpickr-day:hover {
  background: #005fcc;
  color: white;
}

/* Selected day */
.flatpickr-day.selected,
.flatpickr-day.selected:hover {
  background: #003d99;
  color: white;
}

/* Todayâ€™s day */
.flatpickr-day.today {
  border: 2px solid #0077ff;
}

/* Disabled days */
.flatpickr-day.disabled {
  color: #ccc;
  cursor: not-allowed;
}

{%- endstyle -%}

<div
