{% assign artist = shop.metafields.custom.featured_artist.value %}

{% if artist %}
  <style>
    .featured-artist-section {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 40px;
      padding: 60px 20px;
      max-width: 1200px;
      margin: 0 auto;
      align-items: start;
    }

    .artist-photo img {
      width: 100%;
      max-width: 300px;
      border-radius: 12px;
    }

    .artist-info {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    .artist-info h2 {
      font-size: 2rem;
      font-weight: bold;
      margin: 0;
    }

    .artist-info p {
      font-size: 1rem;
      line-height: 1.5;
    }

    .artist-info a {
      background: black;
      color: white;
      padding: 10px 20px;
      text-decoration: none;
      width: fit-content;
    }

    .artist-artwork {
      grid-column: 1 / -1;
      margin-top: 40px;
    }

    .artist-artwork img {
      width: 100%;
      max-width: 1000px;
      border-radius: 8px;
    }

    @media screen and (max-width: 768px) {
      .featured-artist-section {
        grid-template-columns: 1fr;
        text-align: center;
      }

      .artist-info a {
        margin: 0 auto;
      }
    }
  </style>

  <div class="featured-artist-section">
    <div class="artist-photo">
      {% if artist.photo %}
        <img src="{{ artist.photo | image_url: width: 600 }}" alt="{{ artist.name }}" width="600" height="600">
      {% endif %}
    </div>
    <div class="artist-info">
      <h2>Featured Artist: {{ artist.name }}</h2>
      <p>{{ artist.bio }}</p>
      {% if artist.website %}
        <a href="{{ artist.website }}" target="_blank">Visit Website</a>
      {% endif %}
    </div>

    {% if artist.artwork %}
      <div class="artist-artwork">
        <img 
          src="{{ artist.artwork | image_url: width: 1200 }}" 
          alt="{{ artist.name }} Artwork"
          width="1200"
          height="800"
        >
      </div>
    {% endif %}
  </div>
{% else %}
  <p>No featured artist set.</p>
{% endif %}


{% schema %}
{
  "name": "Featured Artist",
  "tag": "section",
  "settings": [],
  "presets": [
    {
      "name": "Featured Artist"
    }
  ]
}
{% endschema %}
