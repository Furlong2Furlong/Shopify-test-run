<div class="menu-wrapper">
{% if section.settings.category %}
  <h2>{{ section.settings.category }}</h2>
{% endif %}

<div class="menu-category">

  {% for block in section.blocks %}
    <div class="menu-item">
    <div class="menu-item-header">
      <h3 class="menu-item-name">{{ block.settings.name }}</h3>
      <span class="menu-item-price">{{ block.settings.price }}</span>
      </div>
{% if block.settings.description != blank %}
      <p class="menu-item-description">{{ block.settings.description }}</p>
  
    {% endif %}
    </div>
  {% endfor %}
</div>
</div>

{% schema %}
{
  "name": "Menu Category",
  "settings": [
    {
      "type": "text",
      "id": "category",
      "label": "Category Title (e.g. Wine, Pizza)",
        "info": "ðŸ’¡ After entering the item name, click the block title in the left panel and rename it (e.g. 'Margherita Pizza') for easier organization.",
      "default": "Pizza"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Menu Item",
      "settings": [
        { "type": "text", "id": "name", "label": "Item Name",  "info": "ðŸ’¡ After entering the item name, click the block title in the left panel and rename it,  or right click the 'Menu Item' on top (e.g. 'Margherita Pizza') for easier organization." },
        { "type": "text", "id": "price", "label": "Price" },
        { "type": "text", "id": "description", "label": "Description" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Menu Section",
      "category": "Restaurant",
      "settings": {
        "category": "Pizza"
      },
      "blocks": [
        { "type": "item", "settings": { "name": "Margherita", "price": "$12" }},
        { "type": "item", "settings": { "name": "Pepperoni", "price": "$14" }}
      ]
    }
  ]
}
{% endschema %}

{% style %}


.menu-category {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 2rem;
}

.menu-item {
  border-bottom: 1px solid #ddd;
  padding-bottom: 1rem;
}

.menu-item-header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}

.menu-item-name {
  margin: 0;
  font-size: 1.1rem;
  font-weight: 600;
}

.menu-item-price {
  font-weight: bold;
  white-space: nowrap;
  margin-left: 1rem;
}

.menu-item-description {
  margin-top: 0.3em;
  margin-bottom: 0;
  font-size: 0.95rem;
  color: #555;
}
.menu-wrapper {
  width: 50%;
  margin: 0 auto;
}
{% endstyle %}