{% style %}
.menu-wrapper {
  width: 90%;
  max-width: 1000px;
  margin: 0 auto;
}

.menu-category-title {
  text-align: center;
  font-size: 1.8rem;
  margin-bottom: 1.5rem;
}

.menu-split {
  display: flex;
  gap: 2rem;
}

.menu-left,
.menu-right {
  width: 50%;
}

.menu-side-title {
  font-size: 1.4rem;
  margin-bottom: 1rem;
  border-bottom: 2px solid #ccc;
  padding-bottom: 0.5rem;
}

.menu-item {
  border-bottom: 1px solid #ddd;
  padding-bottom: 1rem;
  margin-bottom: 1rem;
}

.menu-item-header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}

.menu-item-name {
  font-size: 1.1rem;
  font-weight: 600;
  margin: 0;
}

.menu-item-price {
  font-weight: bold;
  white-space: nowrap;
  margin-left: 1rem;
}

.menu-item-description {
  font-size: 0.95rem;
  margin-top: 0.3em;
  color: #555;
}
.menu-subheading {
   font-size: 1.4rem;
  margin-bottom: 1rem;
  border-bottom: 2px solid #ccc;
  padding-bottom: 0.5rem;
}
{% endstyle %}
