<div class="pickup-calendar-settings">
  <h2>Pickup Calendar Settings</h2>
  <!-- This section contains settings used by other sections -->
</div>
{% schema %}
{
  "name": "Pickup Calendar Settings",
  "settings": [
    {
      "type": "range",
      "id": "minimum_days_notice",
      "label": "Minimum days in advance",
      "min": 0,
      "max": 30,
      "default": 14
    },
    {
      "type": "select",
      "id": "available_days",
      "label": "Available pickup days",
      "options": [
        { "value": "0", "label": "Sunday" },
        { "value": "1", "label": "Monday" },
        { "value": "2", "label": "Tuesday" },
        { "value": "3", "label": "Wednesday" },
        { "value": "4", "label": "Thursday" },
        { "value": "5", "label": "Friday" },
        { "value": "6", "label": "Saturday" }
      ],
      "default": "1"
    },
    {
      "type": "textarea",
      "id": "blackout_dates",
      "label": "Blackout dates (YYYY-MM-DD, one per line)",
      "default": ""
    }
  ],
  "presets": [
    {
      "name": "Pickup Calendar Settings"
    }
  ]
}
{% endschema %}
